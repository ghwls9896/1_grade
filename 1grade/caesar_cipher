import header
ciphertext = ""
first= ord(" ")
last= ord("~")

def make_cipher(plaintext, key):
    for ch in plaintext:
        ciphertext += chr((ord(ch)+ key - first) % (last - first+ 1) + first)
        
    with open(filename, "w") as  cfile:
        cfile.write(ciphertext)
        
    return ciphertext
def main():
    header.header_print("1-2 Caesar Cipher","Lee ho jin","2003-07-08")

    plaintext = input("암호화할 문자를 입력하세요: ")
    key = int(input("Ceacar Cipher 값을 입력하세요: "))
    filename = input("암호문을 저장한 파일명을 입력하세요: ")

    ciphertext = make_cipher(plaintext, key)
    print("암호화된 문장 : ", ciphertext)

    with open(filename, "w")as cfile:
        cfile.write(plaintext)
    print("암호화된 문장이 저장되었습니다")
if __name__="__main__":
    main()
